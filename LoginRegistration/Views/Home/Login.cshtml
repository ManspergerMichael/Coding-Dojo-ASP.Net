@model User
<h1>Login and Registration</h1>
<div class="container">
<div class="register">
    <h3>Register</h3>
    <p>@ViewBag.RegistrationError</p>
    <form asp-action="Register" asp-controller="Home" method="POST">
        <span asp-validation-for="firstName"></span>
        <label asp-for="firstName"></label>
        <input asp-for="firstName"><br>
        <span asp-validation-for="lastName"></span>
        <label asp-for="lastName"></label>
        <input asp-for="lastName"><br>
        <span asp-validation-for="email"></span>
        <label asp-for="email"></label>
        <input asp-for="email"><br>
        <span asp-validation-for="Password"></span>
        <label asp-for="Password"></label>
        <input asp-for="Password"><br>
        <span>@ViewBag.CPError</span>
        <label for="ConfirmPassword">Confirm Password</label>
        <input name="ConfirmPassword"><br>
        <input type="submit" value="Register">
    </form>
</div>

<div class="login">
    <h3>Login</h3>
    <p>@ViewBag.loginError</p>
    <form asp-action="Login" asp-controller="Home" method="POST">
        <span asp-validation-for="email"></span>
        <label asp-for="email"></label>
        <input asp-for="email"><br>
        <span asp-validation-for="Password"></span>
        <label asp-for="Password"></label>
        <input asp-for="Password"><br>
        <input type="submit" value="Login">
    </form>
</div>

